rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Avatars: leitura pública, escrita apenas pelo próprio usuário autenticado
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Outras rotas: negar por padrão (ajuste conforme necessidade)
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
